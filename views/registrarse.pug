doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Inicio de Sesion
        link(rel="stylesheet", href="/css/simple-grid.min.css")
        link(rel="stylesheet", href="/css/loginAndRegister.css")
    body
        section.container
            .row
                .col-12
                    .container.title-wp
                        h1#titleAction REGISTRARSE
                .col-12 
                    .container.wp-form
                        .wp-logoAction 
                            img(src="/img/mediaImg/register.svg", alt="")
                        .wp-inputs 
                            label(for="email") Usuario
                            input(type="text" id="username" placeholder="Nombre de usuario")
                            label(for="email") Correo
                            input(type="email" id="email" placeholder="Ej: correo@colamer.edu.co")
                            label(for="password") Contrase単a
                            input(type="password" id="password" placeholder="Contrase単a")
                            label(for="password") Contrase単a(de nuevo)
                            input(type="password" id="passwordConfirmation" placeholder="Contrase単a(de nuevo)")
                            label(for="password") Telefono
                            input(type="text" id="phone" placeholder="316 1234567")
                            button(id="submit" action="register") Registrarse
                            a(href="/") Ingresar 
                        .wp-logo 
                            img(src="/img/mediaImg/colamer.svg") 

        script(src="/js/axios.min.js")
        script(src="/js/sweetalert.js")
        script(src="/js/loginAndRegister.js")


                


